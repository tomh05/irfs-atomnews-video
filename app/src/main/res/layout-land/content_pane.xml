<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <SurfaceView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/videoSurfaceView"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text=""
                android:id="@+id/pauseButton"
                android:alpha="1"
                android:textSize="90dp"
                android:textColor="#FFFFFFFF"
                android:background="#00000000" />

        <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="â†»"
                android:id="@+id/playButton"
                android:alpha="1"
                android:textSize="90dp"
                android:textColor="#99FFFFFF"
                android:background="#66000000" />

    </RelativeLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Caption text for article shown above. Kept short."
            android:id="@+id/captionView"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:background="#99000000"
            android:textSize="22dp"
            android:paddingBottom="10dp"
            android:textColorLink="#CC6666"
            android:layout_marginTop="250dp"
            android:textColor="#DDD" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/exploreDeeperLayout"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Deeper:"
            android:id="@+id/exploreDeeperHeader"
            android:textColor="#FFF"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>

