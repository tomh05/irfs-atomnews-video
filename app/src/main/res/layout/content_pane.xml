<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
<!--
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:id="@+id/mainVideo" />
-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp">

        <TextureView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/videoView"
            android:background="#000" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:text=""
            android:id="@+id/pauseButton"
            android:alpha="1"
            android:textSize="90dp"
            android:textColor="#FFFFFFFF"
            android:background="#00000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:layout_alignParentBottom="false"
            android:gravity="center_vertical|center_horizontal"
            android:background="#66000000"
            android:id="@+id/pausedLayout"
            android:visibility="invisible">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/bbc_logo"
                android:id="@+id/replayButton"
                android:background="#CC000000"
                android:textColor="#CCC"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/bbc_logo"
                android:id="@+id/resumeButton"
                android:background="#CC000000"
                android:layout_margin="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="The documentary was controversial because it interviewed one of the convicted rapists in prison"
            android:id="@+id/captionView"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="3dp"
            android:background="#99000000"
            android:textSize="26dp"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:textColorLink="#CC6666"
            android:layout_marginTop="270dp"
            android:textColor="#DDD"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="&lt;"
            android:id="@+id/prevCaption"
            android:layout_alignTop="@+id/exploreDeeperLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#DDD"
            android:background="#99000000" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/skip"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:background="#99000000"
            android:text="SKIP"
                android:textSize="16dp"
                android:paddingBottom="10dp"
                android:textColorLink="#CC6666"
            android:textColor="#DDD"
            android:layout_weight="1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="&gt;"
            android:id="@+id/nextCaption"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:textColor="#DDD"
            android:layout_alignParentRight="true"
            android:background="#99000000"
            android:visibility="visible" />

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="3dp"
        class="irfs.videonews1.VideoProgressBar"
        android:id="@+id/videoProgressBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/exploreDeeperLayout"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    </LinearLayout>

</LinearLayout>